{
    "compilerOptions": {
        "outDir": "./dist/js",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2015",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true, /* Implies 'allowSyntheticDefaultImports'. */
        "types": [
            "bun-types"
        ],
        "paths": {
            "@*": ["./src/ts/*"]
        },
    },
    "exclude": ["node_modules", "dist", "server.js"],
    "loader": "esbuild=loader"
}